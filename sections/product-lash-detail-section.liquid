{% assign product_handle = product.handle %}
{% for block in section.blocks %}
{% if product_handle == block.settings.featured_product %}

<div class="proSec3 product-se-3" style="background:{{ section.settings.bd_color }}">
<div class="page-width product-se3lashes101">
<div class="product-lashes101main">

  <div class="top">

       <h2 class="h1">{{ block.settings.heading }}</h2>

    <div class="sub_heading">
       <strong>{{ block.settings.sub_heading }}</strong>
    </div>
    <div class="desc">
       <p>{{ block.settings.desc }}</p>
    </div>
  </div>


  <div class="middle">
  	<div class="middle_heading">
       <strong>{{ block.settings.middle_heading }}</strong>
    </div>
    <div class="middle_image">
